@model RegisterVM


<div class="card">
    <div class="div-header">
        <h3>Kullanici Register</h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="card-body">
        <form asp-action="Register" asp-controller="Account" method="post">
            <div class="mb-3 row">
                <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control-plaintext" asp-for="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="UserName" class="col-sm-2 col-form-label">UserName</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="UserName">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="RePassword" class="col-sm-2 col-form-label">Re Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" asp-for="RePassword">
                    <span asp-validation-for="RePassword" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="TcNo" class="col-sm-2 col-form-label">Tc Kimlik No</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="TcNo">
                    <span asp-validation-for="TcNo" class="text-danger"></span>
                </div>
            </div>




            <div class="mb-3 row">
                <div class="col-sm-10">

                    <button type="submit" class="btn btn-primary">Login</button>
                </div>

            </div>
        </form>
    </div>
</div>
@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}